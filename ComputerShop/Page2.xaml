<Page x:Class="ComputerShop.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ComputerShop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="Login">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
         Content="Regisztrálj be!"
         FontWeight="Bold"
         FontSize="20"
         FontFamily="Times New Roman"
         HorizontalAlignment="Center"
             Foreground="DarkRed"
  />
        <Label Grid.Row="1"
      Grid.Column="0"
      Content="Felhasználónév: "
      FontWeight="Bold"
      FontFamily="Times New Roman"
      FontSize="15"
  />
        <Label Grid.Row="2"
      Grid.Column="0"
      Content="Jelszó: "
      FontWeight="Bold"
      FontFamily="Times New Roman"
      FontSize="15"
  />
        <Label Grid.Row="3"
    Grid.Column="0"
    Content="Teljes név: "
    FontWeight="Bold"
    FontFamily="Times New Roman"
    FontSize="15"
/>
        <Label Grid.Row="4"
    Grid.Column="0"
    Content="E-mail cím: "
    FontWeight="Bold"
    FontFamily="Times New Roman"
    FontSize="15"
/>
        <StackPanel Grid.Row="5" Grid.Column="1" Margin="20">
            <Button
                x:Name="regButton"
             Content="Belépés"
             FontWeight="Bold"
             FontFamily="Times New Roman"
             FontSize="15"
             Width="70"
             HorizontalAlignment="Right"
             Foreground="White"
              Background="Green"
              Click="regButton_Click"
             />
        </StackPanel>
        <TextBox
            x:Name="userTextBox"
              Grid.Row="1"
              FontWeight="Bold"
              FontSize="15" Margin="133,0,0,0" Grid.ColumnSpan="2"
              />
        <PasswordBox
            x:Name="passwordTextBox"
               Grid.Row="1"
               FontSize="15" Grid.ColumnSpan="2" Margin="133,26,0,0" Grid.RowSpan="2"
              />
       <TextBox
    x:Name="fullnameTextBox"
      Grid.Row="3"
      FontWeight="Bold"
      FontSize="15" Margin="133,0,0,0" Grid.ColumnSpan="2"
      />
        <TextBox
    x:Name="emailTextBox"
      Grid.Row="4"
      FontWeight="Bold"
      FontSize="15" Margin="133,0,0,0" Grid.ColumnSpan="2"
      />

    </Grid>

</Page>